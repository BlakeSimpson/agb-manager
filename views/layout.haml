%html
  %head
    %title= "#{@page_title ? @page_title + " | " : nil}AGB Manager"
    %link{rel: "stylesheet", type: "text/css", href: "/screen.css"}
    %script{src: "js/jquery.js", type: "text/javascript"}
    %script{src: "js/app.js", type: "text/javascript"}
  %body
    .masthead
      .wrapper.clearline
        %h1.title AGB Manager

        .locale-switcher
          .current-item.locale-item.clearline
            %i.flag{class: @current_locale.downcase}
            %span.name= @current_locale
            %i.carot &#9660;

          %ul.available-locales
            - Entry::VALID_LOCALES.each do |locale|
              %li.locale-item
                %a{href: "/?locale=#{locale}"}
                  %i.flag{class: locale.downcase}
                  %span.name= locale



    .wrapper.main-content.clearline
      = yield
